script.
    $(function () {
        $('.accordion').collapse()
        $('#sendBtn').click(function(e){
            e.preventDefault()
            $.ajax({
                url: '/api/mail',
                data: JSON.stringify({
                    email: $('#i-email').val(),
                    message: $('#i-message').val(),
                    firstName: $('#i-firstName').val(),
                    lastName: $('#i-lastName').val(),
                }),
                cache: false,
                contentType: 'application/json',
                processData: false,
                type: 'POST',
                success: function (data) {
                    alert('Your feedback is safely sent to the admin')
                    $('#i-email').val('')
                    $('#i-message').val('')
                    $('#i-firstName').val('')
                    $('#i-lastName').val('')
                },
                error: function (data) {
                    console.log(data)
                }
            });
        })
    })

